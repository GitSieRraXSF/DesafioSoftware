<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainMenuController">
   <center>
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="IniciarSesion" alignment="CENTER" onAction="#LoginSesion" prefHeight="30.0" prefWidth="170.0" style="-fx-background-color: #20e1fa; -fx-background-radius: 5; -fx-font-size: 16;" text="Iniciar Sesion" textAlignment="CENTER" />
            <Button fx:id="Registrar" alignment="CENTER" onAction="#RegistarUser" prefHeight="30.0" prefWidth="170.0" style="-fx-background-color: #06ff8b; -fx-background-radius: 5; -fx-font-size: 16;" text="Registrar" textAlignment="CENTER" />
         </children>
      </VBox>
   </center>
   <top>
      <Label alignment="CENTER" text="Welcome to the Enrollment Software" textFill="#138aa8" BorderPane.alignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </top>
</BorderPane>
